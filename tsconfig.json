{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "outDir": "dist",
        "lib": ["es2019"],
        "types": ["node", "jest"]
    },
    "include": ["*.ts", "src/**/*.ts", "tests/**/*.ts", "*.d.ts"],
    "exclude": ["node_modules", "dist"]
}
